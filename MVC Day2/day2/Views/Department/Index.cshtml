@model IEnumerable<Department>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>

    <table class="table">

        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
            </tr>
        </thead>
        @foreach(var item in Model)
        {
            <tr>
                <td> @item.Id</td>
                <td>@item.Name</td>
               </tr> 

        }
    </table>
    <a href="/department/create" class="btn btn-danger">Add</a>
</body>
</html>
