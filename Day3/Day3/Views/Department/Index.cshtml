@model IEnumerable<Department>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <title>Index</title>
</head>
<body>
    <h1 class="text-start text-info m-2">Departments</h1>
    <table class=" table table-bordered table-hover table-danger m-auto w-100">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Count() == 0)
            {
                <tr> <td colspan="5" class="text-center">There is no Department</td></tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td><a href="/Department/Edit/@item?.Id" class="btn btn-success">Edit</a></td>
                        <td><a href="/Department/Delete/@item?.Id" class="btn btn-danger"
                               onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>

    </table>
    <div class="text-center">
        <br />
        <a href="/Department/Create" class="btn btn-info m-auto">Create</a>
    </div>
</body>
</html>
